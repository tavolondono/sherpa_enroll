<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        android:layout_alignParentTop="true"
        android:layout_above="@+id/layoutButtons"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                style="?attr/iconLargeSuccessTick"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_success_title"
                android:id="@+id/label_title"
                style="?attr/titleText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_success_description"
                android:id="@+id/label_description"
                android:layout_below="@+id/label_title"
                style="?attr/contentText"
                />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutSingleButton"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_next"
            android:id="@+id/buttonPositive"
            style="?attr/positiveButton"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

