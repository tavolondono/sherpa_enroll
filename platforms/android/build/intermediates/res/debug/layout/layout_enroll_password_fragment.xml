<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >
    <include layout="@layout/circular_progress_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutLogic"
        >

        <include layout="@layout/steps_status"
            android:id="@+id/stepSatus"
            style="?attr/layoutStepStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/layoutButtons"
        android:layout_below="@+id/stepSatus"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutMainBody"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBody"
                android:gravity="center"
                style="?attr/layoutBody"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_capture_password_title_1"
                    android:id="@+id/label_title"
                    style="?attr/titleText"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="?attr/capturePasswordRegexInfo"
                    android:id="@+id/label_description"
                    android:layout_below="@+id/label_title"
                    style="?attr/contentText"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutEdit"
                android:gravity="center"
                android:layout_below="@+id/layoutBody"
                android:layout_marginTop="@dimen/margin_xxlarge"
                >
                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_small_height"
                    android:id="@+id/strengthProgressBar"
                    android:max="16"
                    android:progressDrawable="@drawable/progress_bar_orange"

                    />
                <EditText
                    android:id="@+id/editTextPassword1"
                    android:layout_below="@+id/strengthProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/label_capture_password_hint_1"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:windowSoftInputMode="stateAlwaysVisible"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutSingleButton"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_confirm"
            android:id="@+id/buttonPositive"
            style="?attr/positiveButton"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            />
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
