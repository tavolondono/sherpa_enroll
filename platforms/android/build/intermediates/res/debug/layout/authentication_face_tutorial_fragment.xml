<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layoutButtons"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_face_tutorial_title"
                android:id="@+id/label_title"
                style="?attr/contentText"
                android:layout_centerInParent="true"
                />

            <WebView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/displayGif"
                android:layout_above="@+id/label_title"
                android:layout_centerInParent="true"
                android:scrollbars="none"
                android:layout_marginBottom="@dimen/margin_xlarge"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_face_tutorial_description"
                android:id="@+id/label_description"
                android:layout_below="@+id/label_title"
                style="?attr/descriptionText"
                />
            </RelativeLayout>
	</ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutSingleButton"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_i_am_ready"
            android:id="@+id/buttonPositive"
            style="?attr/positiveButton"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
