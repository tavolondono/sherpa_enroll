<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:layout_above="@+id/layoutButtons"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_purpose_of_request_title"
                android:id="@+id/label_title"
                style="?attr/titleText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_purpose_of_request_description"
                android:id="@+id/label_description"
                android:layout_below="@+id/label_title"
                style="?attr/contentText"
                />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutDoubleButton"
        >

        <Button
            android:layout_width="match_parent"
            android:text="@string/button_continue"
            android:id="@+id/buttonPositive"
            style="?attr/positiveButton"
            android:layout_alignParentBottom="true"
            />


        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_xlarge"
            android:id="@+id/label_separator"
            android:layout_above="@+id/buttonPositive"
            android:layout_centerHorizontal="true"
            style="?attr/contentText"
            />

        <Switch
            android:layout_width="match_parent"
            android:text="@string/switch_accept"
            android:id="@+id/positiveSwitch"
            android:layout_above="@+id/label_separator"
            android:checked="false"
            style="?attr/switchPositive"
            />
    </RelativeLayout>

