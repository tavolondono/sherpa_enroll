<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/layoutProgressBar"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_centerInParent="true"
        android:id="@+id/scrollViewProgressBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <morpho.etis.android.sdk.mid_android_sdk.ui.views.CircularProgressBar
                android:id="@+id/progressBar"
                style="?attr/progressBar"
                />

            <TextView
                android:id="@+id/label_progress_bar_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_activation_process_title"
                style="?attr/contentText"
                />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
