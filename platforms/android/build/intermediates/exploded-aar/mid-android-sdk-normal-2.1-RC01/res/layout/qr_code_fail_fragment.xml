<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >

    
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        android:layout_alignParentTop="true"
        android:layout_above="@+id/layoutButtons"
		>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                style="?attr/iconLargeQrCodeNotRecognised"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_qr_code_failure_title"
                android:id="@+id/label_title"
                style="?attr/titleText"
                />
            </RelativeLayout>
	</ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutSingleButton"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_re_enter_qr_code"
            android:id="@+id/buttonNegative"
            style="?attr/negativeButton"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

