<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >

    
	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"

        android:layout_alignParentTop="true"
        android:layout_above="@+id/layoutButtons"
		>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                style="?attr/iconLargeFaceNotRecognised"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_failure_face_title"
                android:id="@+id/label_title"
                style="?attr/titleText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_failure_last_chance_description_face"
                android:id="@+id/label_description"
                android:layout_below="@+id/label_title"
                style="?attr/contentText"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutBalls"
                android:orientation="horizontal"
                android:layout_below="@+id/label_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom= "@dimen/margin_medium"
                android:visibility="invisible"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/iconTryAgainAttemptDone"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/iconTryAgainAttemptDone"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/iconTryAgainAttemptNotDone"
                    android:layout_centerHorizontal="true"
                    />

                </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_authentication_failure_no_tries"
                android:id="@+id/label_description_retries"
                android:layout_below="@+id/layoutBalls"
                style="?attr/contentText"
                android:visibility="invisible"
                />

            </RelativeLayout>
	</ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutDoubleButton"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_try_again"
            android:id="@+id/buttonNegative"
            style="?attr/negativeButton"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_xlarge"
            android:text="@string/label_or"
            android:id="@+id/label_or"
            android:layout_above="@+id/buttonNegative"
            android:layout_centerHorizontal="true"
            style="?attr/contentText"
            />

        <Button
            android:layout_width="match_parent"
            android:text="@string/button_authorise_with_your"
            android:id="@+id/buttonNeutral"
            android:layout_above="@+id/label_or"
            style="?attr/neutralButton"
            />
    </RelativeLayout>

