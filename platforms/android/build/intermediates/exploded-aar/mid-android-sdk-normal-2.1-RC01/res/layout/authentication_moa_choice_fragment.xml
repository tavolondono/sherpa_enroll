<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
style="?attr/layoutFragment"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_centerInParent="true"

    android:id="@+id/scrollView2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBody"
        android:gravity="center"
        style="?attr/layoutBody"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_authentication_moa_choice_title"
            android:id="@+id/label_title"
            style="?attr/titleText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_authentication_moa_choice_description"
            android:id="@+id/label_description"
            android:layout_below="@+id/label_title"
            style="?attr/contentText"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutContent"
            android:orientation="horizontal"
            android:layout_below="@+id/label_description"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_centerHorizontal="true"
            >
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>

