<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/layoutFragment"
    >

    <include layout="@layout/steps_status"
        android:id="@+id/stepSatus"
        style="?attr/layoutStepStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@+id/layoutButtons"
        android:layout_below="@+id/stepSatus"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutBody"
            android:gravity="center"
            style="?attr/layoutBody"
            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon"
                style="?attr/iconLargeFaceInfo"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_registration_face_success_info_title"
                android:id="@+id/label_title"
                style="?attr/titleText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_registration_face_success_info_description"
                android:id="@+id/label_description"
                android:layout_below="@+id/label_title"
                style="?attr/contentText"
                />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutButtons"
        style="?attr/layoutSingleButton"
        >
        <Button
            android:layout_width="match_parent"
            android:text="@string/button_i_am_ready"
            android:id="@+id/buttonPositive"
            style="?attr/positiveButton"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</RelativeLayout>
